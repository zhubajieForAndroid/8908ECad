<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#12242E"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/system_topbar"
        layout="@layout/topbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/system_many_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/system_topbar"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y65"
        android:background="@mipmap/guanyu_bg_4">
        <LinearLayout
            android:layout_marginLeft="335dp"
            android:layout_marginTop="134dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 硬件版本-->
            <RelativeLayout
                android:layout_marginLeft="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/device_hardware_version_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/digit_0"/>
                    <ImageView
                        android:layout_marginLeft="43dp"
                        android:id="@+id/device_hardware_version_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/digit_0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:text="主板与通讯模块 : "
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/communication_state"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>


            <!-- app版本-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/device_app_version_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/digit_0"/>
                    <ImageView
                        android:layout_marginLeft="43dp"
                        android:id="@+id/device_app_version_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/digit_0"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ip_container"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:text="服务器的IP : "
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="000.000.000.000"
                        android:id="@+id/service_ip"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>


            <!-- 主控板软件版本-->
            <LinearLayout
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/device_software_version_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:layout_marginLeft="43dp"
                    android:id="@+id/device_software_version_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/digit_0" />
            </LinearLayout>

            <!-- 设备序列号-->
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/devices_sequence_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_sequence_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_sequence_number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_sequence_number4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>

                <ImageView
                    android:id="@+id/devices_sequence_number5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_sequence_number6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>

                <ImageView
                    android:id="@+id/devices_sequence_number7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"
                />
                <ImageView
                    android:id="@+id/devices_sequence_number8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:src="@mipmap/digit_0"/>
            </LinearLayout>

            <!--生产日期 -->
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/devices_init_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/digit_2"/>
                <ImageView
                    android:id="@+id/devices_init_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_init_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_init_date4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_init_date5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="117dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_init_date6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_init_date7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="117dp"
                    android:src="@mipmap/digit_0"/>
                <ImageView
                    android:id="@+id/devices_init_date8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/digit_0"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/about_system_cheack_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/y19"
        android:layout_marginLeft="@dimen/x40"
        android:background="#12242E"
        android:src="@mipmap/btn_4"/>
    <ImageButton
        android:id="@+id/about_system_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y19"
        android:layout_marginRight="@dimen/x40"
        android:background="#12242E"
        android:src="@mipmap/back_red"/>

</RelativeLayout>
