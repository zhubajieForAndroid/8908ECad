<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.OdourActivity">
    <ImageView
        android:id="@+id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/system_setting_topbar"
        layout="@layout/topbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="100dp">
        <View
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center"
            android:background="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="重度危害"
            android:textColor="@color/red"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x100"
            android:background="@color/yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="一般危害"
            android:textColor="@color/yellow"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x100"
            android:background="@color/blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="正常"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x100"
            android:background="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="优秀"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/colors"
        android:background="@drawable/background_serach_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--甲醛-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/before_number_formaldehyde"
                        android:layout_marginLeft="20dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0mg/m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/after_number_formaldehyde"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0mg/m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/before_scpre_formaldehyde"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="甲醛浓度"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/after_scpre_formaldehyde"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                </LinearLayout>

            </LinearLayout>
            <!--TVOC-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/before_score_tvoc"
                        android:layout_marginLeft="20dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0mg/m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/after_score_tvoc"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0mg/m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/before_progress_tvoc"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="TVOC"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/after_progress_tvoc"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                </LinearLayout>

            </LinearLayout>
            <!--PM2.5-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/before_score_pm"
                        android:layout_marginLeft="20dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0ug/m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/after_score_pm"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0ug/m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/before_progress_pm"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="PM2.5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/after_progress_pm"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                </LinearLayout>

            </LinearLayout>
            <!--温度-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/before_score_wen"
                        android:layout_marginLeft="20dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0C°"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/after_score_wen"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0C°"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/before_progress_wen"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="温度"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/after_progress_wen"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                </LinearLayout>

            </LinearLayout>
            <!--湿度-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/before_score_shi"
                        android:layout_marginLeft="20dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0%RH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/after_score_shi"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="0%RH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/before_progress_shi"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="湿度"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <com.E8908.widget.MyProgressBar
                        android:id="@+id/after_progress_shi"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_colors"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:src="@mipmap/after_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:src="@mipmap/back_red"
        android:id="@+id/back_btn"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>