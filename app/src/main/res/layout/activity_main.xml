<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#172E3B">
    <ImageView
        android:id="@+id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/topbarView"
        layout="@layout/topbar_layout"/>
    <LinearLayout
        android:layout_below="@id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab"
                    app:tabTextColor="@color/mycolor"
                    app:tabIndicatorHeight="4dp"
                    app:tabTextAppearance="@style/TabLayoutTextStyle"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
               <android.support.v4.view.ViewPager
                   android:layout_below="@id/tab"
                   android:layout_marginRight="30dp"
                   android:layout_marginLeft="30dp"
                   android:id="@+id/home_viewpager"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>


            </RelativeLayout>
            <!--工作信息  android:background="@drawable/background_shape"-->
            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="@dimen/x50"
                android:layout_marginLeft="@dimen/x50"
                android:orientation="vertical"
                android:id="@+id/tab_Relativelayout_message"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:paddingLeft="@dimen/x26"
                    android:paddingRight="@dimen/x26"
                    android:orientation="vertical"
                    android:background="@drawable/background_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y15"
                            android:text="设备序列号"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/eqeuipment_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="00000000"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y15"
                            android:text="药液桶剩余"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/surplus_oil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="0ML"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y15"
                            android:text="工作次数全国排名"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/work_ranking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y15"
                            android:text="单月次数全国排名"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/work_ranking_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y15"
                            android:text="工作次数内部排名"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/work_in_ranking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y20"
                            android:text="单月次数内部排名"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/work_in_ranking_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="24px"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--常规模式-->
                <LinearLayout
                    android:id="@+id/tab_linearlayout_routine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x50"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y28"
                        android:text="常规模式"
                        android:textColor="#e9feff"
                        android:textSize="29px"/>
                </LinearLayout>
                <!--深度模式-->
                <LinearLayout
                    android:id="@+id/tab_linearlayout_depth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x50"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y28"
                        android:text="自定义模式"
                        android:textColor="#e9feff"
                        android:textSize="29px"/>
                </LinearLayout>
                <!--加注药液-->
                <LinearLayout
                    android:id="@+id/tab_linearlayout_infusion_solution"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x50"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y28"
                        android:text="加注药液"
                        android:textColor="#e9feff"
                        android:textSize="29px"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--工作统计-->
                <LinearLayout
                    android:id="@+id/tab_linearlayout_work_statistics"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y28"
                        android:text="工作统计"
                        android:textColor="#e9feff"
                        android:textSize="29px"/>
                </LinearLayout>
                <!--系统设置-->
                <LinearLayout
                    android:id="@+id/tag_lineatrlayout_system_setup"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon6"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y28"
                        android:text="系统设置"
                        android:textColor="#e9feff"
                        android:textSize="29px"/>
                </LinearLayout>
                <!--在线检测-->
                <LinearLayout
                    android:id="@+id/about_equipment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y28"
                        android:text="返回"
                        android:textColor="#e9feff"
                        android:textSize="29px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
