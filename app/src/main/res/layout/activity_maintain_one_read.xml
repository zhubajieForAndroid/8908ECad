<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maintain_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MaintainOneActivity">
    <ImageView
        android:id="@+id/bg_touch"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/topbarView"
        layout="@layout/topbar_layout"/>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_width="1220dp"
        android:layout_height="280dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_car_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:padding="30dp"
            android:background="@drawable/conventional_background_shape"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:indeterminateTint="#1b70fa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="加载中,请稍后"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/scan_ble"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="240dp"
        android:text="扫描蓝牙"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/back_btn_shape"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="113dp"
        android:layout_centerHorizontal="true"
        android:layout_width="1220dp"
        android:layout_height="120dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_ble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/no_scan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:checked="true"
                android:clickable="false"
                android:id="@+id/ble_radio"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radio_btn_selcecter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/quaery_top_icon_right_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/blue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
