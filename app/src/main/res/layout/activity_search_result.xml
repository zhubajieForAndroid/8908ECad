<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:id="@+id/touch_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HistoryActivity">
    <ImageView
        android:id="@+id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/system_setting_topbar"
        layout="@layout/topbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/hygiene"
                android:background="@mipmap/test_zjws"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/after_zjws_comprehensive_score"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:layout_gravity="center"
                        android:text="无"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:text="整洁卫生"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/air_conditioner"
                android:layout_marginTop="10dp"
                android:background="@mipmap/test_ktxt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/after_ktxt_comprehensive_score"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:layout_gravity="center"
                        android:text="无"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:text="空调系统"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/odour"
                android:layout_marginTop="10dp"
                android:background="@mipmap/test_ywjc"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/after_ywjc_comprehensive_score"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:layout_gravity="center"
                        android:text="无"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:text="异味检测"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/harmful_gas"
                android:layout_marginTop="10dp"
                android:background="@mipmap/test_yhqt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/after_yhqt_comprehensive_score"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:layout_gravity="center"
                        android:text="无"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textSize="26sp"
                        android:text="有害气体"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/background_serach_shape"
                    android:layout_width="750dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:textColor="@android:color/white"
                        android:id="@+id/serach_et"
                        android:layout_centerInParent="true"
                        android:textColorHint="#3d5876"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="输入车牌号搜索"
                        android:textCursorDrawable="@drawable/edit_cursor_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/serach_et"
                        android:src="@mipmap/test_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/search_iv"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="40dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@color/brightbackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/car_number"
                            android:textColor="@android:color/white"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:text="-- --"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/push_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/push_tv"
                            android:textSize="30sp"
                            android:textColor="#1d87f9"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:text="点击推送"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="32sp"
                            android:textColor="@android:color/white"
                            android:text="施工前: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@android:color/white"
                            android:id="@+id/before_score"
                            android:textStyle="bold"
                            android:textSize="34sp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="30sp"
                            android:textColor="@android:color/white"
                            android:text="分"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="25dp"
                            android:textSize="32sp"
                            android:textColor="@android:color/white"
                            android:text="施工后: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@android:color/white"
                            android:id="@+id/after_score"
                            android:textStyle="bold"
                            android:textSize="34sp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="30sp"
                            android:textColor="@android:color/white"
                            android:text="分"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/create_time"
                        android:layout_marginTop="25dp"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"
                        android:text="施工日期:-- - -- - --"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                     <TextView
                         android:id="@+id/car_read"
                         android:layout_marginTop="25dp"
                         android:textSize="32sp"
                         android:textColor="@android:color/white"
                         android:text="车主阅读: 0次"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                </LinearLayout>
                <com.E8908.widget.ScoreView
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="580dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_shape_select"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:keyBackground="@drawable/selcecter_key"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyTextColor="#000"
        android:keyTextSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="0.0"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/back_btn"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/x30"
        android:background="@drawable/conventional_background_shape"
        android:id="@+id/progress_bar"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:indeterminateTint="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="努力推送中,请稍后"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>