<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#172E3B"
                android:orientation="vertical"
                tools:context=".activity.WorkStatisticsActivity">
    <ImageView
        android:id="@+id/toobar_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        layout="@layout/topbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x170"
            android:src="@mipmap/top_text"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/x170"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/text_1"/>
                <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                   android:layout_gravity="bottom"
                    android:id="@+id/pb"
                    android:layout_width="764dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/x38"
                    app:zpb_bg_color="#030e20"
                    app:zpb_gradient_from="#1B70FA"
                    app:zpb_gradient_to="#1FC8F5"
                    app:zpb_max="100"
                    app:zpb_open_gradient="true"
                    app:zpb_padding="0dp"
                    app:zpb_progress="0"/>
                <TextView
                    android:id="@+id/depth_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x38"
                    android:text="0次"
                    android:textColor="#49baf9"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/text_2"/>
                <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                    android:id="@+id/pb1"
                    android:layout_width="764dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x38"
                    app:zpb_bg_color="#030e20"
                    app:zpb_gradient_from="#1B70FA"
                    app:zpb_gradient_to="#1FC8F5"
                    app:zpb_max="100"
                    app:zpb_open_gradient="true"
                    app:zpb_padding="0dp"
                    app:zpb_progress="0"/>
                <TextView
                    android:id="@+id/routine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="0次"
                    android:textColor="#49baf9"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/text_3"/>
                <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                    android:layout_gravity="bottom"
                    android:id="@+id/pb2"
                    android:layout_width="764dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/x38"
                    app:zpb_bg_color="#030e20"
                    app:zpb_gradient_from="#1B70FA"
                    app:zpb_gradient_to="#1FC8F5"
                    app:zpb_max="100"
                    app:zpb_open_gradient="true"
                    app:zpb_padding="0dp"
                    app:zpb_progress="0"/>
                <TextView
                    android:id="@+id/pd2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x38"
                    android:text="0ml"
                    android:textColor="#49baf9"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/text_4"/>
                <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                    android:layout_gravity="bottom"
                    android:id="@+id/pb3"
                    android:layout_width="764dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x38"
                    app:zpb_bg_color="#030e20"
                    app:zpb_gradient_from="#1B70FA"
                    app:zpb_gradient_to="#1FC8F5"
                    app:zpb_max="100"
                    app:zpb_open_gradient="true"
                    app:zpb_padding="0dp"
                    app:zpb_progress="0"/>
                <TextView
                    android:id="@+id/add_totel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x38"
                    android:text="0ml"
                    android:textColor="#49baf9"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/text_5"/>
                <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                    android:layout_gravity="bottom"
                    android:id="@+id/pb4"
                    android:layout_width="764dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x38"
                    app:zpb_bg_color="#030e20"
                    app:zpb_gradient_from="#1B70FA"
                    app:zpb_gradient_to="#1FC8F5"
                    app:zpb_max="100"
                    app:zpb_open_gradient="true"
                    app:zpb_padding="0dp"
                    app:zpb_progress="0"/>
                <TextView
                    android:id="@+id/pd4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x38"
                    android:text="0次"
                    android:textColor="#49baf9"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/x27"
        android:layout_marginBottom="@dimen/y19"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:id="@+id/text_result"
            android:text="功能测试结果"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/delete_btn_shape"/>
        <Button
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:id="@+id/text_function"
            android:text="设备功能测试"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/delete_btn_shape"/>
        <Button
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:id="@+id/bt_back"
            android:text="返回"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/back_btn_shape"/>
    </LinearLayout>

</RelativeLayout>
