                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/shajun_a"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:textSize="28sp"
                android:textColor="@color/yellow"
