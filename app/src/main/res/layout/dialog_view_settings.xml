                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--净化-->
        <LinearLayout
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
