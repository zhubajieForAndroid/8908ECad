<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/select_container"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/start_link"
            android:layout_gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="连接蓝牙气体检测仪"
            android:background="@drawable/select_key_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/gas_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:id="@+id/bel_id"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甲醛浓度"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/formaldehyde_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0.00 mg/m³"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.E8908.widget.MyProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progressDrawable="@drawable/progress_colors"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TVOC"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvoc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0.00 mg/m³"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.E8908.widget.MyProgressBar
            android:id="@+id/progress_tvoc"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/progress_colors"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/pm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0 ug/m³"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.E8908.widget.MyProgressBar
            android:id="@+id/progress_pm"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/progress_colors"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0 C°"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.E8908.widget.MyProgressBar
            android:id="@+id/progress_wen"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/progress_colors"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/shi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0% RH"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.E8908.widget.MyProgressBar
            android:id="@+id/progress_shi"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/progress_colors"/>
    </LinearLayout>
</RelativeLayout>