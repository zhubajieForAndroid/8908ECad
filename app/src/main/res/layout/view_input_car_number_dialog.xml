<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/top_bg"
        android:src="@mipmap/home_cph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:maxLength="10"
        android:gravity="center"
        android:id="@+id/input_number"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="125dp"
        android:background="@null"
        android:layout_width="400dp"
        android:layout_height="65dp"/>
    <LinearLayout
        android:layout_marginLeft="56dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/input_number"
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/carnumber_one"
            android:gravity="center"
            android:background="@android:color/white"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/carnumber_two"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/carnumber_three"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <android.inputmethodservice.KeyboardView
        android:layout_below="@id/top_bg"
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_key_shape_select"
        android:keyBackground="@drawable/selcecter_key"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyTextColor="#000"
        android:keyTextSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="0.0"
        android:visibility="gone"/>
</RelativeLayout>